<!DOCTYPE html>
<html lang="en">

<head>
  {{> head}}
</head>

<body class="beer-article">
  {{> nav}}

  <main class="responsive beer-article-layout">
    <div class="beer-article-main">
      <article class="round no-elevate large-padding beer-article-card doc">
        <header class="beer-article-header">
          {{#with page.title}}
          <h1>{{{this}}}</h1>
          {{/with}}
          <div class="beer-article-meta">
            {{#if page.attributes.revdate}}
            <span class="beer-meta-item">
              <i class="fas fa-calendar"></i>
              <span>{{page.attributes.revdate}}</span>
            </span>
            {{/if}}
            <span class="beer-meta-item">
              <i class="fas fa-clock"></i>
              <span data-reading-time></span>
            </span>
            {{#if page.attributes.tags}}
            <span class="beer-meta-item beer-meta-tags">
              <i class="fas fa-tag"></i>
              <span>{{page.attributes.tags}}</span>
            </span>
            {{/if}}
          </div>
        </header>
        {{{page.contents}}}
      </article>
    </div>
    <aside class="beer-article-toc" aria-label="On this page">
      <h3>On this page</h3>
      <div class="beer-article-toc-body"></div>
    </aside>
  </main>
  {{> footer-scripts}}
</body>

</html>
